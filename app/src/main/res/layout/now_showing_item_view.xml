<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/margin_xlarge"
        android:paddingLeft="@dimen/margin_xlarge">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent">
        <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="@dimen/thirtyfive"
                android:layout_marginTop="@dimen/margin_large"
                app:cardCornerRadius="@dimen/margin_medium"
        >
            <ImageView
                    android:id="@+id/iv_movie_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/blankpanther"
                    android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <org.mmtextview.components.MMTextView
                android:id="@+id/tv_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_black_panther"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_medium"
                android:textSize="@dimen/text_heading_1x"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_movie_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fantasy/Science Fiction ."
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="@dimen/margin_small"/>
            <TextView
                    android:id="@+id/tv_time"
                    android:layout_toEndOf="@id/tv_movie_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 15 m"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="@dimen/margin_small"/>
        </RelativeLayout>
        <LinearLayout
                android:weightSum="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">
            <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <org.mmtextview.components.MMTextView
                        android:id="@+id/tv_imdb_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7.5"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_regular_3x"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_below="@id/tv_imdb_num"
                        android:id="@+id/tv_imdb_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="imdb"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_small"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content">
                <org.mmtextview.components.MMTextView
                        android:id="@+id/tv_rotten_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="97%"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_regular_3x"/>
                <TextView
                        android:layout_below="@id/tv_rotten_num"
                        android:id="@+id/tv_rotten_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rotten Tomato"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_small"
                />

            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom">
                <org.mmtextview.components.MMTextView
                        android:id="@+id/tv_meta_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="92%"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_regular_3x"/>
                <TextView
                        android:layout_below="@id/tv_meta_num"
                        android:id="@+id/tv_meta_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="metacritic"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_small"
                />
            </RelativeLayout>

        </LinearLayout>
        <Button
                android:id="@+id/btn_buy_ticket"
                android:textAlignment="center"
                android:layout_width="@dimen/twohundred"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Buy Tickets"
                android:padding="@dimen/margin_small"
                android:background="@drawable/round_button"

                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_regular_3x"
                android:layout_gravity="center"
        />
        <ImageButton
                android:id="@+id/img_downarrow"
                android:layout_width="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAlignBottom="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>